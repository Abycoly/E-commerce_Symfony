{% extends "base.html.twig" %}

{% block title %}{{product.title}}
{% endblock %}

{% block body %}
  {# {{ dump(product) }} #}
  {% for message in app.flashes('notice') %}
    <div class="alert alert-info text-center w-25 mx-auto">
      {{message}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {% endfor %}
  <div class="section mx-5 my-5">
    <div class="container-fluid">
      <div class="row mb-5">
        <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
          {# <div class="product-image"> #}
          <div class="product_img_box">
            <img id="product_img" src="../uploads/{{product.media}}" class="shadow-lg" style="height: 600px; width: 100%" data-zoom-image="../uploads/{{product.media}}" alt="{{product.title}}"/>
          </div>
          {#
				</div> #}
        </div>
        <div class="col-lg-6 col-md-12">
          <div class="pr_detail m-5">
            <div class="product_description">
              {# badge de disponibilité #}
              {% if product.quantity == 0 %}
                <div class="badge badge-pill badge-danger">Indisponible</div>
              {% endif %}
              {# fin badge #}
              <h4 class="product_title">{{product.title}}</h4>
              <div class="product_price">
                <span class="price">{{(product.price / 100)|number_format(2, ',', '.')}}€</span>
                <!-- <del>{{product.price * 1.35 / 100}}€</del> <div class="on_sale"> <span>35% Off</span> </div> -->
              </div>
              <div class="rating_wrap">
                <div class="rating">
                  <div class="product_rate" style="width:80%"></div>
                </div>
                <span class="rating_num">Avis (21)</span>
              </div>
            </div>
            <hr>
            <div class="cart_extra">
              <ul class="product-meta">
                <li>Category:
                  <a href="{{path ('category_products', {'name': product.category})}}">{{product.category}}</a>,
                </li>
                <li>Tags:
                  {{product.tags}}</a>
              </li>
            </ul>
            <div class="product_share d-flex">
              <span>Share:</span>
              <ul class="social_icons">
                <li>
                  <a href="https://www.facebook.com/sharer/sharer.php?u=www.acbeauty/produit/{{product.slug}}" data-href="" data-layout="button_count" target="_blank">
                    <i class="fab fa-facebook-f"></i>
                  </a>
                </li>
                <li>
                  <a href="https://twitter.com/intent/tweet?url=www.acbeauty/produit/{{product.slug}}&text=">
                    <i class="fab fa-twitter"></i>
                  </a>
                </li>
                <li>
                  <a href="#">
                    <i class="fab fa-instagram"></i>
                  </a>
                </li>
                <!-- <li> <a href="#"> <i class="fab fa-instagram"></i> </i> </a> -->
              </li>
            </ul>
          </div>
          <hr>
          {# <div class="cart-product-quantity"> #}
          {% if product.quantity %}
            <div class="cart_btn mt-5">
              <a href="{{path('cart-add', {'id': product.id} )}}" class="btn-lg w-75 center text-center mx-auto btn-block btn-success bg-dark" id="show-btn-add" onclick="animationCart()">
                <i class="fas fa-shopping-cart mr-1"></i>
                Ajouter au panier</a>
            </div>
          {% endif %}

          {#
						</div> #}
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-12 mt-3">
        <div class="tab-style3">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="Description-tab" data-toggle="tab" href="#Description" role="tab" aria-controls="Description" aria-selected="true">
                <h4>Description</h4>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" id="Reviews-tab" data-toggle="tab" href="#Reviews" role="tab" aria-controls="Reviews" aria-selected="false">
                <h4>Avis (2)</h4>
              </a>
            </li>
          </ul>
          <div class="tab-content shop_info_tab mt-3">
            {# DESCRIPTION #}
            <div class="tab-pane fade show active" id="Description" role="tabpanel" aria-labelledby="Description-tab">
              <p>{{product.description}}</p>
            </div>
            {# END DESCRIPTION #}

            {# REVIEWS #}
            <div class="tab-pane fade" id="Reviews" role="tabpanel" aria-labelledby="Reviews-tab">
              <div class="comments">
                <h5 class="product_tab_title">2 avis pour
                  <span>{{product.title}}</span>
                </h5>
                <ul class="list_none comment_list mt-4">
                  <li>
                    <div class="comment_img">
                      <img src="../uploads/{{product.media}}" width="50px" height="50px" alt="user1"/>
                    </div>
                    <div class="comment_block">
                      <div class="rating_wrap">
                        <div class="rating">
                          <div class="product_rate" style="width:50%"></div>
                        </div>
                      </div>
                      <p class="customer_meta">
                        <span class="review_author">Alea Brooks</span>
                        <span class="comment-date">March 5, 2018</span>
                      </p>
                      <div class="description">
                        <p>Lorem Ipsumin gravida nibh vel velit auctor aliquet. Aenean sollicitudin, lorem quis bibendum auctor, nisi elit consequat ipsum, nec sagittis sem nibh id elit. Duis sed odio sit amet nibh vulputate
                        </p>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="comment_img">
                      <img src="http://placehold.it/50" alt="user2"/>
                    </div>
                    <div class="comment_block">
                      <div class="rating_wrap">
                        <div class="rating">
                          <div class="product_rate" style="width:50%"></div>
                        </div>
                      </div>
                      <p class="customer_meta">
                        <span class="review_author">Grace Wong</span>
                        <span class="comment-date">June 17, 2018</span>
                      </p>
                      <div class="description">
                        <p>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters</p>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
              <div class="review_form field_form">
                <p>
                  <a href="#newcomment">Ajouter un commentaire</a>
                </p>
                <div id="newcomment">
                  <form class="row mt-3">
                    <div class="form-group col-12">
                      <div class="star_rating">
                        <span data-value="1">
                          <i class="far fa-star"></i>
                        </span>
                        <span data-value="2">
                          <i class="far fa-star"></i>
                        </span>
                        <span data-value="3">
                          <i class="far fa-star"></i>
                        </span>
                        <span data-value="4">
                          <i class="far fa-star"></i>
                        </span>
                        <span data-value="5">
                          <i class="far fa-star"></i>
                        </span>
                      </div>
                    </div>
                    <div class="form-group col-12">
                      <textarea required="required" placeholder="Your review *" class="form-control" name="message" rows="4"></textarea>
                    </div>
                    <div class="form-group col-md-6">
                      <input required="required" placeholder="Enter Name *" class="form-control" name="name" type="text">
                    </div>
                    <div class="form-group col-md-6">
                      <input required="required" placeholder="Enter Email *" class="form-control" name="email" type="email">
                    </div>

                    <div class="form-group col-12">
                      <button type="submit" class="btn btn-fill-out" name="submit" value="Submit">Submit Review</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            {# END REVIEWS #}
          </div>
        </div>
      </div>
    </div>

    <hr>

  </div>
  <div class="heading_s1 my-4">
    <h3>Produits similaires</h3>
  </div>
  <div class="row container-fluid releted-product justify-content-center ml-0 d-flex">

    {% for reletedProducts in allProduct %}
      {# condition sur les produits de la mm categorie, à afficher en releted product #}
      {% if reletedProducts.category is same as product.category %}
        {# condition pour exclure l'affichage du produit en show details #}
        {% if product is not same as reletedProducts %}
          <div class="col-lg-3 col-md-6">
            {{ include ('partials/product.html.twig', {'product': reletedProducts}) }}
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}

  </div>
</div>
</div>
{% endblock %}