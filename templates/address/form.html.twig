{{ form_start(form) }}
{# {{ form_widget(form) }} #}
<div class="row">
  <div class="col-md-12">{{form_row(form.label)}}</div>
  <div class="col-md-6">{{form_row(form.firstname)}}</div>
  <div class="col-md-6">{{form_row(form.lastname)}}</div>
  <div class="col-md-6">{{form_row(form.compagny)}}</div>
  <div class="col-md-6">{{form_row(form.address)}}</div>
  <div class="col-md-6">{{form_row(form.city)}}</div>
  <div class="col-md-6">{{form_row(form.postal_code)}}</div>
  <div class="col-md-6">{{form_row(form.country)}}</div>
  <div class="col-md-6">{{form_row(form.phone_number)}}</div>
  <div class="col-12">
    <button class="btn bg-dark w-75 text-white ">{{ button_label|default('Enregistrer') }}</button>
  </div>

</div>

{{ form_end(form) }}